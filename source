#include <Windows.h> 

#include <commctrl.h>

#define ID_TREEVIEW 100
LRESULT CALLBACK WndProc(HWND, UINT, WPARAM, LPARAM);

HWND hwndTV;
HWND hMain;
HWND CreateATreeView(HWND hwndParnet);
HTREEITEM AddItemToTree(HWND hwndTV,LPTSTR lpszText, int nLevel);

int WINAPI WinMain(HINSTANCE hInst, HINSTANCE hPrev, LPSTR args, int nCmdShow) {
	
	
	
	WNDCLASS wc = {};

	
	wc.hInstance = hInst; 
	wc.lpfnWndProc = WndProc;
	wc.lpszClassName = L"Desktop Background";
	wc.hIcon = LoadIcon(NULL, IDI_APPLICATION);

	if (!RegisterClassW(&wc)) {
		return 0;

	}
	hMain = CreateWindowW(L"Desktop Background", L"THAI NGU", WS_VISIBLE | WS_OVERLAPPEDWINDOW, 100, 100, 500, 500, NULL, NULL, hInst, NULL);
	ShowWindow(hMain, nCmdShow);
	UpdateWindow(hMain);
	
	
	
	
	

	MSG msg = {};
	while (GetMessage(&msg, NULL, NULL, NULL))
	{
		
		DispatchMessage(&msg);

	}
	return (int) msg.wParam;

}
LRESULT CALLBACK WndProc(HWND hwnd, UINT msg, WPARAM wp, LPARAM lp)
{
	switch (msg)
	{
	case WM_CREATE:
		HWND hwndTreeView;
		hwndTreeView = CreateATreeView(hwnd);
		AddItemToTree(hwndTreeView, L"Drink", 1);
		

	
	case WM_DESTROY:
		PostQuitMessage(0);
		break;
	
	default:
		return DefWindowProc(hwnd, msg, wp, lp);
	}
}
HWND CreateATreeView(HWND hwndParent) {
	RECT rcClient;
	HWND hwndTV;


}
